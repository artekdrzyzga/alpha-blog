<div class="container ">
   <%= form_with(model: @article, class: "shadow p-4 mb-2 bg-info rounded", local: true) do |f| %>
    <div class="row justify-content-center">
      <div class="col-10">
        <%=render 'shared/errors', obj: @article %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col=10">
            <%= f.text_field :title, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col=10">
            <%= f.text_area :description, rows: 10, class: "form-control mb-3 shadow rounded" %>
          </div> 
        </div>

        <div class="form-group row">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      </div>
    </div>  

  <% end %>
  <div class="mb-3">
   <%= link_to '[ Cancel and back to article list ]', articles_path %>
  </div>
</div>